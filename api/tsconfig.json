{
	"compilerOptions": {
		"target": "es2017",                                
		"module": "commonjs",                           
		"lib": ["es6"],                                   
		"allowJs": true,
		"outDir": "./dist",                             
		"rootDir": "./src",
		"removeComments": true,
		"types": [
			"jest",
			"node"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,              
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,                           
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src/",
		"paths": {
			"@controllers/*": ["./controllers/*"],
			"@models/*": ["./sequelize/app/models/*"],
			"@sequelize_config/*": ["./sequelize/app/config/*"]
		}
	},
	"exclude": [
		"./dist",
		"jest.config.js"
	]
}